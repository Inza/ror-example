<%= simple_form_for item do |f| %>
    <% if item.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

          <ul>
            <% item.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :cost %><br>
      <%= f.text_field :cost %>
    </p>
    <p>
      <%= f.association :user %>
    </p>
    <p>
      <%= f.label :note %><br>
      <%= f.text_area :note, size: "60x12" %>
    </p>
    <p>
      <%= f.submit "#{(item.persisted?) ? 'Update' : 'Create'} Item" %>
    </p>
<% end %>