<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cost</th>
      <th>Note</th>
      <th>User (model)</th>
      <th>User (helper)</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.name %></td>
      <td><%= item.cost %> Kƒç</td>
      <td><%= truncate item.note, length:30 %></td>
      <td>
        <% if item.user.present? %>
            <%= link_to item.user do %>
                <%= item.user.full_name %>
            <% end %>
        <% end %>
      </td> <%# Using model method %>
      <td><%= full_name item.user if item.user.present? %></td> <%# Using helper method %>
      <td><%= link_to 'Show', item %></td>
      <td><%= link_to 'Edit', edit_item_path(item) %></td>
      <td><%= link_to 'Delete', item, method: :delete, data:{ confirm:'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to 'New Item', new_item_path %></p>
